<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_gravity="center_vertical"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/earning_image"
                android:layout_width="@dimen/imageSmallSize"
                android:layout_height="@dimen/imageSmallSize"
                app:srcCompat="@drawable/money_earn"
                android:layout_margin="10dp"/>

            <TextView
                android:id="@+id/earning_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="TextView"
                android:textSize="@dimen/textSizeTextView"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</FrameLayout>