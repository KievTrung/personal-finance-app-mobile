<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        android:layout_margin="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wallet_image"
                android:layout_width="@dimen/imageNormalSize"
                android:layout_height="@dimen/imageNormalSize"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/wallet" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wallet_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="TextView"
                    android:textSize="@dimen/textSizeTextViewHeader" />

                <TextView
                    android:id="@+id/wallet_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="TextView"
                    android:textSize="@dimen/textSizeTextView" />

                <TextView
                    android:id="@+id/wallet_description"
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:focusable="auto"
                    android:focusableInTouchMode="true"
                    android:marqueeRepeatLimit="marquee_forever"
                    android:maxLines="1"
                    android:padding="5dp"
                    android:text="this is a verrrrrrrrrry long textttttttttttttttttttttttttttt"
                    android:textSize="@dimen/textSizeTextView" />
            </LinearLayout>

            <ImageView
                android:id="@+id/star_image"
                android:layout_width="@dimen/imageSmallSize"
                android:layout_height="@dimen/imageSmallSize"
                android:layout_margin="10dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/star" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</FrameLayout>